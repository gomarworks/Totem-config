#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

/ {
    combos { compatible = "zmk,combos"; };

    keymap {
        compatible = "zmk,keymap";

        baseLayer {
            bindings = <
                                 &kp Q  &kp W  &kp E       &kp R      &kp T        &kp Y        &kp U             &kp I          &kp O       &kp P
                                 &kp A  &kp S  &kp D       &kp F      &kp G        &kp H        &kp J             &kp K          &kp L       &kp SEMICOLON
&mt LEFT_SHIFT LEFT_PARENTHESIS  &kp Z  &kp X  &kp C       &kp V      &kp B        &kp N        &kp M             &kp COMMA      &kp PERIOD  &kp SLASH      &mt LEFT_CONTROL RIGHT_PARENTHESIS
                                               &kp DELETE  &kp SPACE  &lt 1 TAB    &lt 2 ENTER  &mt LEFT_ALT ESC  &kp BACKSPACE
            >;

            label = "BASE";
        };

        numberLayer {
            bindings = <
        &trans  &kp F7  &kp F8  &kp F9  &trans    &trans           &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &trans
        &trans  &kp F1  &kp F2  &kp F3  &trans    &kp KP_NUMBER_0  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &trans
&trans  &trans  &kp F4  &kp F5  &kp F6  &trans    &trans           &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &trans  &trans
                        &trans  &trans  &trans    &trans           &trans           &trans
            >;
        };

        symbolLayer {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };
    };
};
